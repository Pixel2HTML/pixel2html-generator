{
  "name": "<%= projectName %>",
  "description": "<%= projectName %>",
  "license": "MIT",
  "repository": "http://www.pixel2html.com",
  "version": "1.0.0",
  "scripts": {
    "start": "npm install <% if (markupIntegration=='jekyll'){%>&& bundle install<%}%>",
    "code": "gulp",
    "build": "gulp release --prod"
  },
  "dependencies": {
    "del": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "browser-sync": "^2.18.12",
    <% if(frontEndFramework == 'bootstrap'){ %>
    "bootstrap-sass": "^3.3.7",
    <% } -%>
    <% if(frontEndFramework == 'foundation'){ %>
    "foundation-sites": "^6.3.1",
    <% } -%>
    <% if(frontEndFramework == 'basscss'){ %>
      "basscss-sass": "^4.0.0",
    <% } -%>
    <% if(jQuery){ %>
      "jquery": "^3.2.1",
    <% } -%>
    <% if (cssProcessor === 'scss' || frontEndFramework) { -%>
    "gulp-sass": "^3.1.0",
    <% } -%>
    <% if (cssProcessor === 'less') { -%>
    "gulp-less": "^3.3.0",
    <% } -%>
    <% if (cssProcessor === 'styl') { -%>
    "gulp-stylus": "^2.6.0",
    <% } -%>
    <% if (markupLanguage === 'pug') { %>
      "gulp-pug": "^3.3.0",
    <% } -%>
    "gulp-group-css-media-queries": "^1.2.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-if": "^2.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-util": "^3.0.8",
    "gulp-rename": "^1.2.2",
    "gulp-purifycss": "^0.2.0",
    "gulp-csscomb": "^3.0.8",
    "require-dir": "^0.3.2",
    "gulp-zip": "^4.0.0",
    "gulp-load-plugins": "^1.5.0",
    "standard": "^10.0.2",
    "yargs": "^8.0.1",
    "svg4everybody": "^2.1.8",
    "gulp-svgmin": "^1.2.4",
    "gulp-svgstore": "^6.1.0"
  },
  "standard": {
    "globals": [
      "jQuery",
      "$",
      "WebFont",
      "svg4everybody"
    ]
  }
}
